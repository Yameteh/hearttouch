<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg_im"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_dp_8"
        android:textColor="@color/red_light"
        android:text="@string/title_msg_im"/>


    <FrameLayout
        android:id="@+id/fl_msg_im"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <TextView
        android:id="@+id/tv_msg_notify"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:text="@string/title_msg_notify"
        android:paddingLeft="@dimen/dimen_dp_8"
        android:textColor="@color/red_light"
        />

    <ListView
        android:id="@+id/lstv_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@null">
    </ListView>

</LinearLayout>
