<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_light">

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/textstyle_actionbar"
            android:id="@+id/tv_actionbar_title"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/btn_actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_dp_16"
            />

        <ImageButton
            android:id="@+id/btn_actionbar_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight = "@dimen/dimen_dp_16"
            android:background="@drawable/ic_ok"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>