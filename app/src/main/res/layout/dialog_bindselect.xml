<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bindselect"
    android:padding="@dimen/dimen_dp_38"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bind_me"
            android:gravity="left"
            android:textColor="@color/red_light"
            android:textSize="@dimen/dimen_dp_30"
            />

        <ImageView
            android:padding="@dimen/dimen_dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_bind_state"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/red_light"
            android:textSize="@dimen/dimen_dp_30"
            android:id="@+id/tv_bind_to"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_dp_16"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ibtn_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bind"/>

        <ImageButton
            android:id="@+id/ibtn_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_20"
            android:background="@drawable/selector_unbind"/>

    </LinearLayout>

</LinearLayout>